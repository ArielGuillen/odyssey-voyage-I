{
  "extends": [
    "@trevorblades/eslint-config/react",
    "plugin:jsx-a11y/recommended"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 100,
        "tabWidth": 2,
        "trailingComma": "all",
        "endOfLine": "auto"
      }
    ],
    "@typescript-eslint/no-var-requires": "off"
  },
  "overrides": [
    {
      "files": ["**/__tests__/*.js", "**/__tests__/*.jsx", "**.test.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
